@model Eqirl.Models.QuizQestion

@{
    ViewData["Title"] = "Answer";
}

<h1>Answer the following Question,Give correct option no.</h1>


<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="AnsUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
               <div class="form-group"> 
               
                <input type="hidden"  asp-for="FKDeptID" class="form-control" asp-items="FKDeptID"/>
                <span asp-validation-for="FKDeptID" class="text-danger"></span>

           
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input  type="hidden" asp-for="Question" class="form-control" />
                 @Html.DisplayFor(model => model.Question)
            </div>
            <div class="form-group">
                <label asp-for="Option1" class="control-label"></label>
                <input  type="hidden" asp-for="Option1" class="form-control"/>
                @Html.DisplayFor(model => model.Option1)
            </div>
            <div class="form-group">
                <label asp-for="Option2" class="control-label"></label>
                <input  type="hidden" asp-for="Option2" class="form-control" />
                 @Html.DisplayFor(model => model.Option2)
            </div>
            <div class="form-group">
                <label asp-for="Option3" class="control-label"></label>
                <input  type="hidden" asp-for="Option3" class="form-control" />
                @Html.DisplayFor(model => model.Option3)
            </div>
            <div class="form-group">
                <label asp-for="Option4" class="control-label"></label>
                <input  type="hidden" asp-for="Option4" class="form-control" />
                 @Html.DisplayFor(model => model.Option4)
            </div>
             <div class="form-group">
                
                <input  type="hidden" asp-for="CorrectAnswer" class="form-control"  />
             
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label">Give Answer</label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index1">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





